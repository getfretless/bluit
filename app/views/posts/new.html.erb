<%= form_for @post do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.object.errors[:title] if f.object.errors[:title].present? %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </fieldset>

  <fieldset>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </fieldset>

  <%= f.submit %>
<% end %>
